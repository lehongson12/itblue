<?xml version="1.0"?>
<config>
	<modules>
		<Sm_Amaz>
			<version>1.0.0</version>
			<title>MagenTech.com</title>
			<link><![CDATA[http://www.magentech.com/]]></link>
		</Sm_Amaz>
	</modules>
	<global>
		<helpers>
		  <amaz>
			<class>Sm_Amaz_Helper</class>
		  </amaz>
		</helpers>
		<models>
		  <amaz>
			<class>Sm_Amaz_Model</class>
		  </amaz>
		</models>		
	</global>
	<adminhtml>
        <translate>
            <modules>
                <Sm_Amaz>
                    <files>
                        <default>Sm_Amaz.csv</default>
                    </files>
                </Sm_Amaz>
            </modules>
        </translate>
	</adminhtml>	
 	<default>
		<amaz_cfg module="amaz">
			<general>
				<showcpanel>1</showcpanel>
				<color>green-blue</color>
				<body_background_color>#e6e6e6</body_background_color>
				<body_link_color>#909090</body_link_color>
				<body_text_color>#909090</body_text_color>
				<menu_styles>1</menu_styles>
				<google_font></google_font>
				<google_font_targets></google_font_targets>
				<body_font_size>15px</body_font_size>
				<body_font_family>segoe ui</body_font_family>
				<responsive_menu>selectbox</responsive_menu>
			</general>
		</amaz_cfg>
	</default> 
</config> 