<?xml version="1.0"?>
<config>
	<global>
		<models>
            <blocktabs>
                <class>Sm_BlockTabs_Model</class>
            </blocktabs>
        </models>
		<blocks>
            <blocktabs>
                <class>Sm_BlockTabs_Block</class>
            </blocktabs>            		
        </blocks>				
		<helpers>
            <blocktabs>
                <class>Sm_BlockTabs_Helper</class>
            </blocktabs>
        </helpers>
        <resources>
        	<blocktabs_setup>
        		<setup>
        			<module>Sm_BlockTabs</module>
        		</setup>
        	</blocktabs_setup>
        </resources>
	</global>
	<frontend>
        <routers>
			<blocktabs>
                <use>standard</use>
                <args>
                    <module>Sm_BlockTabs</module>
                    <frontName>blocktabs</frontName>
                </args>
            </blocktabs>
        </routers>
		<layout>
            <updates>
                <blocktabs module="Sm_BlockTabs">
					<file>sm/blocktabs.xml</file>
                </blocktabs>
            </updates>
        </layout>
        <translate>
      		<modules>
          		<Sm_BlockTabs>
                     <files>
                          <default>Sm_BlockTabs.csv</default>
                     </files>
                </Sm_BlockTabs>
            </modules>
        </translate>
	</frontend>
	<adminhtml>
        <translate>
      		<modules>
          		<Sm_BlockTabs>
                     <files>
                          <default>Sm_BlockTabs.csv</default>
                     </files>
                </Sm_BlockTabs>
            </modules>
        </translate>
		<acl>
			<resources>
				<admin>
					<children>
						<system>
							<children>
								<config>
									<children>										
										<blocktabs_cfg translate="title" module="blocktabs">
											<title>SM Block Tabs Settings</title>
										</blocktabs_cfg>
									</children>
								</config>
							</children>
						</system>
					</children>
				</admin>
			</resources>
		</acl>
	</adminhtml>
	<default>
        <blocktabs_cfg>
        	<general>
                <title>SM BlockTabs</title>
                <include_jquery>1</include_jquery>
            </general>
        </blocktabs_cfg>
    </default>
</config>